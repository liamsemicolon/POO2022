import java.util.ArrayList;

public class Superheroe {
	private String nombre;
	private float presupuestoMensual;
	private ArrayList<Asistente> asistentes = new ArrayList<>();
	private ArrayList<AsistenteCH> asistentesConHabilidades = new ArrayList<>();
	
	public float totalAPagar() {
		float f = 0;
		for(Asistente a : getAsistentes()) {
			f += a.salarioFinal();
		}
		for(AsistenteCH ach : getAsistentesConHabilidades()) {
			f += ach.salarioFinal();
		}
		return f;
	}
	
	public float dineroRestante() {
		return getPresupuestoMensual() - totalAPagar();
	}
	
	public boolean llegaAFinDeMes() {
		return getPresupuestoMensual() >= totalAPagar();
	}
	
	public int cantidadDeAsistentes() {
		return asistentes.size() + asistentesConHabilidades.size();
	}
	
	private ArrayList<Asistente> asistentesQueGananMasDe60k(){
		ArrayList<Asistente> arrayAsistentes = new ArrayList<>();
		for(Asistente a : getAsistentes()) {
			if (a.ganaMasDe60k()) {
				arrayAsistentes.add(a);
			}
		}
		return arrayAsistentes;
	}
	
	private ArrayList<AsistenteCH> asistentesConHabilidadesQueGananMasDe60k(){
		ArrayList<AsistenteCH> arrayAsistentes = new ArrayList<>();
		for(AsistenteCH ach : getAsistentesConHabilidades()) {
			if (ach.ganaMasDe60k()) {
				arrayAsistentes.add(ach);
			}
		}
		return arrayAsistentes;
	}
	
	public int cantidadDeAsistentesQueGananMasDe60k () {
		return asistentesQueGananMasDe60k().size() + asistentesConHabilidadesQueGananMasDe60k().size();
	}
	
	public String getNombre() {
		return nombre;
	}
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	public float getPresupuestoMensual() {
		return presupuestoMensual;
	}
	public void setPresupuestoMensual(float presupuestoMensual) {
		this.presupuestoMensual = presupuestoMensual;
	}
	public ArrayList<Asistente> getAsistentes() {
		return asistentes;
	}
	
	public void setAsistentes(ArrayList<Asistente> asistentes) {
		this.asistentes = asistentes;
	}
	public ArrayList<AsistenteCH> getAsistentesConHabilidades() {
		return asistentesConHabilidades;
	}
	public void setAsistentesConHabilidades(ArrayList<AsistenteCH> asistentesConHabilidades) {
		this.asistentesConHabilidades = asistentesConHabilidades;
	}
	
}
