import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class SuperheroeTest {

	@Test
	void soloTieneAsistentes() {
		Superheroe s = new Superheroe();
		s.contratar(new Asistente());
		s.contratar(new Asistente());
		s.contratar(new Asistente());
		s.contratar(new Asistente());
		assertTrue(s.haySoloAsistentes());
	}
	
	@Test
	void soloTieneAsistentesCH() {
		Superheroe s = new Superheroe();
		s.contratar(new AsistenteCH());
		s.contratar(new AsistenteCH());
		s.contratar(new AsistenteCH());
		s.contratar(new AsistenteCH());
		assertTrue(s.haySoloAsistentesCH());
	}

	@Test
	void hayAsistentesYAsistentesCH() {
		Superheroe s = new Superheroe();
		s.contratar(new Asistente());
		s.contratar(new AsistenteCH());
		s.contratar(new Asistente());
		s.contratar(new AsistenteCH());
		assertFalse(s.haySoloAsistentesCH());
	}
}

